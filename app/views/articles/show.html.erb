<div class="container">
<h1><%= @article.title %></h1>

<div>
  <p>Escrito por: <strong><%= @article.user.email%></strongp></p>
  <% if current_user.avatar.attached?%>
    <%= image_tag url_for(current_user.avatar), height: 30%>
  <%end%>
</div>

  <p class="label">Tags</p>
  <% @article.categories.each do |category|%>
    <span class="badge badge-pill" style='background-color:<%= category.color%>'>
      <%= link_to category.title, category, class:'text-white'%>
    </span>
  <%end%>
<div>
  <%= @article.content %>
</div>

<div>
  <%= link_to 'eliminar el articulo', @article, method: :delete%>
</div>
</div>