<div class="container">

  <%= form_with(model: @article, local:true) do |form|%>
  <div class="mt-5">
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>

  <div class="mt-5">
    <%= form.label :status%>
    <%= form.number_field :status%>
  </div>

  <div class="mt-5">
    <%= form.label :content%>
    <%= form.rich_text_area :content%>
  </div>

  <div>
    <%= form.submit%>
  </div>
  <%end%>
</div>