<div class="container">

  <%= form_with(model: @article, local:true) do |form|%>
  <div class="mt-5">
    <%= form.label :title%>
    <%= form.text_field :title%>
  </div>

  <div class="mt-5">
    <%= form.label :category_elements%>
    <div class="row">
      <% @categories.each do |category|%>
        <label class='col-6 col-sm-3'>
          <%= form.check_box :category_elements, {multiple: true}, category.id, nil%>
          <%= category.title%>
        </label>
      <%end%>
    </div>
  </div>

  <div class="mt-5">
    <%= form.label :status%>
    <%= form.number_field :status%>
  </div>

  <div class="mt-5">
    <%= form.label :content%>
    <%= form.rich_text_area :content%>
  </div>

  <div>
    <%= form.submit%>
  </div>
  <%end%>
</div>